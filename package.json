{
  "name": "polished",
  "description": "A lightweight toolset for writing styles in Javascript.",
  "main": "lib/index.js",
  "jsnext:main": "dist/polished.es.js",
  "module": "dist/polished.es.js",
  "version": "2.0.0",
  "scripts": {
    "build": "yarn build:lib && npm run build:dist && npm run build:flow",
    "prebuild:lib": "shx rm -rf lib/*",
    "build:lib": "cross-env BABEL_ENV=cjs babel --out-dir lib src --ignore test.js",
    "prebuild:umd": "shx rm -rf dist/*",
    "prebuild:dist": "shx rm -rf dist/*",
    "build:dist": "rollup -c && rollup -c --environment PRODUCTION",
    "build:watch": "npm-watch",
    "build:flow": "flow-copy-source -v -i '{**/test/*.js,**/*.test.js}' src lib",
    "test": "jest src",
    "precommit": "lint-staged --debug",
    "postcommit": "validate-commit-msg",
    "lint": "eslint src",
    "flow": "flow check && flow-coverage-report -i 'src/**/!(*.test).js'",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "src/**/!(*.test).js": [
      "prettier --no-semi --single-quote --trailing-comma all --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.test.js": [
      "prettier --no-semi --single-quote --trailing-comma all --write",
      "eslint --fix",
      "git add"
    ]
  },
  "watch": {
    "build:lib": "src/**/*.js"
  },
  "author": "Brian Hough <brian@brianhought.net> (https://polished.js.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/styled-components/polished.git"
  },
  "keywords": [
    "styled-components",
    "polished",
    "glamorous",
    "emotion",
    "glamor",
    "css-in-js",
    "inline-styles",
    "react"
  ],
  "bugs": {
    "url": "https://github.com/styled-components/polished/issues"
  },
  "homepage": "https://github.com/styled-components/polished#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-annotate-pure-calls": "^0.3.0",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "concat-stream": "^1.5.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "0.75.0",
    "flow-copy-source": "^2.0.0",
    "flow-coverage-report": "^0.5.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.5",
    "npm-watch": "^0.3.0",
    "prettier": "^1.13.5",
    "ramda": "^0.25.0",
    "rollup": "^0.61.2",
    "rollup-plugin-babel": "^3.0.5",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "semantic-release": "^15.6.0",
    "shx": "^0.3.0",
    "validate-commit-msg": "^2.14.0",
    "vinyl": "^2.2.0",
    "vinyl-fs": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/polished"
  }
}
